<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TabView android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/tab_view">
    </TabView>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true" android:id="@+id/tab_content">
    </FrameLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/MainColor"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true" android:layout_marginBottom="64dp">

        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Beer Boris"
                android:id="@+id/add_streepje"/>
    </LinearLayout>

</RelativeLayout>