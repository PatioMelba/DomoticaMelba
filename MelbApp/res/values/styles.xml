<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginStyle" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:paddingBottom">24dp</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>


    <style name="AppTheme.Base" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MainColor</item>
        <!-- Light Indigo -->
        <item name="colorPrimaryDark">#3949AB</item>
        <!-- Dark Indigo -->
        <item name="colorAccent">@color/MainColor</item>
        <!-- Blue -->
    </style>
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="BorisStyle" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/MainColor</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>
</resources>